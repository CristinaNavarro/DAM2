<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="447dp"
        android:layout_height="164dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bSync" />

        <Button
            android:id="@+id/bManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bManage" />

        <Button
            android:id="@+id/bClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bClear" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="457dp"
        android:layout_height="47dp"
        android:layout_column="0"
        android:layout_marginTop="41dp"
        android:layout_row="0"
        android:layout_weight="1"
        android:checked="true"
        android:layoutDirection="rtl"
        android:text="@string/chRun"
        android:textColor="@android:color/background_light"
        app:buttonTint="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:layout_width="473dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.581">

        <CheckBox
            android:id="@+id/chBackground"
            android:layout_width="457dp"
            android:layout_height="47dp"
            android:checked="true"
            android:layoutDirection="rtl"
            android:text="@string/chBackground"
            android:textColor="@android:color/background_light"
            app:buttonTint="@android:color/background_light" />

        <CheckBox
            android:id="@+id/chNotifications"
            android:layout_width="457dp"
            android:layout_height="47dp"
            android:checked="true"
            android:layoutDirection="rtl"
            android:text="@string/chNotifications"
            android:textColor="@android:color/background_light"
            app:buttonTint="@android:color/background_light"
            tools:buttonTint="@android:color/background_light" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="425dp"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="425dp"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="488dp"
        android:layout_height="54dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox">

        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="0.44"
            android:text="@string/tvService"
            android:textColor="@android:color/background_light" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="2dp"
            android:layout_height="44dp"
            android:layout_weight="0.33"
            android:background="@android:drawable/btn_dropdown" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
</ScrollView>