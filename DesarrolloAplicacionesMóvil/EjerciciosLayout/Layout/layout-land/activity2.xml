<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="346dp"
        android:layout_height="163dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bSync" />

        <Button
            android:id="@+id/bManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bManage" />

        <Button
            android:id="@+id/bClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bClear" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:layout_column="0"
        android:layout_marginTop="29dp"
        android:layout_row="0"
        android:layout_weight="1"
        android:checked="true"
        android:layoutDirection="rtl"
        android:text="@string/chRun"
        android:textColor="@android:color/background_light"
        app:buttonTint="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="210dp" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="79dp"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/linearLayout3">

        <CheckBox
            android:id="@+id/chBackground"
            android:layout_width="349dp"
            android:layout_height="42dp"
            android:checked="true"
            android:layoutDirection="rtl"
            android:text="@string/chBackground"
            android:textColor="@android:color/background_light"
            app:buttonTint="@android:color/background_light" />

        <CheckBox
            android:id="@+id/chNotifications"
            android:layout_width="349dp"
            android:layout_height="42dp"
            android:checked="true"
            android:layoutDirection="rtl"
            android:text="@string/chNotifications"
            android:textColor="@android:color/background_light"
            app:buttonTint="@android:color/background_light"
            tools:buttonTint="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:layout_editor_absoluteX="13dp">

        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="0.44"
            android:text="@string/tvService"
            android:textColor="@android:color/background_light" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="2dp"
            android:layout_height="44dp"
            android:layout_weight="0.33"
            android:background="@android:drawable/btn_dropdown" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/checkBox"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0" />


    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="-76dp"
        tools:layout_editor_absoluteY="178dp" />

</android.support.constraint.ConstraintLayout>